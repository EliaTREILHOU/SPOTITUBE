<div class=" col-md-12  row">
    <p class="col-lg-1"></p>
    <h1 class="text-primary" style="margin: 15px 0"> Créer une nouvelle playlist </h1>
</div>
<div class ='align-middle text-left'>
	<div class="card m-5 p-5" style="height:auto">
		<div class="card-body">
      <div class="row">
        <div class="col-md-6 offset-md-2">

          <%= form_with model: @playlist, local: true do |form| %>

          <div class="form-group row lg-12">
            <div class="col-lg-3"> <%= form.label :title, 'Titre' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :title, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :description, 'Description' %> </div>
            <div class="col-lg-9">
              <%= form.text_field :description, class: "form-control"  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3"> <%= form.label :private_mode, 'Mode public / privé' %> </div>
            <div class="col-lg-9">
              <%= form.radio_button :private_mode, false %> Public
              <%= form.radio_button :private_mode, true %> Privé
            </div>
          </div>


            <div class="actions mt-5 row">
              <div class="col-lg-3"></div>
              <%= form.submit "Valider", class: "btn btn-outline-primary btn-block col-lg-9", style: "margin: 10px 0;" %>
            </div>

            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>